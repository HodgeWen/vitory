{
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "strict": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
